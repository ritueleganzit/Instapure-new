<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

   <LinearLayout
       android:background="#ffffff"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:background="#ADEEEEEE"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <LinearLayout
               android:padding="8dp"

               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <ImageView
                   android:src="@drawable/signinimg"
                   android:layout_width="80dp"
                   android:layout_height="100dp" />
               <TextView
                   android:layout_marginTop="10dp"
                   android:padding="5dp"
                   android:textAppearance="@style/TextAppearance.AppCompat.Large"
                   android:fontFamily="@font/roboto_bold"
                   android:text="Hi User,"
                   android:textColor="@color/textColor"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                 />

               <TextView
                   android:padding="5dp"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Here are some informational video."
                   android:textColor="@color/texthintColors"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />


           </LinearLayout>

           <LinearLayout
               android:gravity="end"
               android:padding="8dp"

               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_margin="2dp"
                       android:src="@mipmap/ic_reward"
                       android:layout_width="25dp"
                       android:scaleType="centerInside"
                       android:layout_height="25dp" />
                   <ImageView
                       android:id="@+id/feedback"
                       android:layout_margin="2dp"
                       android:src="@mipmap/ic_feedback"
                       android:scaleType="centerInside"
                       android:layout_width="25dp"
                       android:layout_height="25dp" />
                   <ImageView
                       android:layout_margin="2dp"
                       android:src="@mipmap/ic_noti"
                       android:scaleType="centerInside"
                       android:layout_width="25dp"
                       android:layout_height="25dp" />
               </LinearLayout>
               <TextView
                   android:layout_marginTop="10dp"
                   android:padding="5dp"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Reorder"
                   android:textColor="@android:color/white"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/btn_bg"/>

               <TextView
                   android:layout_marginTop="10dp"
                   android:padding="5dp"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Promotional"
                   android:textColor="@color/colorPrimaryDark"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/button"/>
           </LinearLayout>
       </LinearLayout>
       <TextView
           android:paddingLeft="15dp"

           android:layout_marginTop="10dp"
           android:fontFamily="@font/roboto_medium"
           android:text="How to use product instruction videos"
           android:textColor="@color/texthintColors"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:id="@+id/rc_photos"
           android:padding="15dp"
           android:layout_marginTop="5dp"
           android:layout_height="match_parent">

       </androidx.recyclerview.widget.RecyclerView>
   </LinearLayout>

</ScrollView>
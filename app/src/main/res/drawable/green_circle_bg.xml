<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary"/>
            <!--shadow Color-->
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary"/>
            <stroke android:color="@color/colorPrimary"
                android:width="1.5dp"/>
        </shape>
    </item>
</layer-list>